<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/md_white_1000</item>
        <item name="colorAccent">@color/md_dark_cards</item>
        <item name="colorPrimaryDark">@color/transparent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="md_corner_radius">16dp</item>

        <item name="exampleTextBackground">#e0e0e0</item>
        <item name="mBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/md_white_1000</item>
        <item name="colorAccent">@color/md_white_1000</item>
        <item name="colorPrimaryDark">@color/transparent</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="md_corner_radius">16dp</item>

        <item name="exampleTextBackground">#3b3b3b</item>
        <item name="mBackground">#3b3b3b</item>
    </style>
</resources>