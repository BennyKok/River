<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tutorial_section_background"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="180dp"
        android:src="@drawable/ic_section_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tutorial_section_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingEnd="14dp"
        android:paddingStart="14dp"
        android:rotation="-90"
        android:layout_marginStart="6dp"
        android:src="@drawable/ic_expand_more_24dp"
        android:tint="?android:attr/textColorTertiary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tutorial_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tutorial_section_arrow"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Title"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_lock_outline_24dp"
        android:tint="?android:attr/textColorTertiary"
        android:id="@+id/tutorial_section_locked_icon" />

</RelativeLayout>